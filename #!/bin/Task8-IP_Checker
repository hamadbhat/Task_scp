#!/bin/bash

# Function to check if input is a valid IPv4 address
is_ipv4() {
        local ip=$1
        if [[ $ip =~ ^([0-9]{1,3}\.){3}[0-9]{1,3}$ ]]; then
                local IFS='.'
                ip=($ip)
                for octet in "${ip[@]}"; do
                        if [[ $octet -gt 255 ]]; then
                        return 1
                        fi
                done
                return 0
        else
                return 1
        fi
}
# Function to check if input is a valid IPv6 address
is_ipv6() {
        local ip=$1
        if [[ $ip =~ ^([0-9a-fA-F]{1,4}:){7}[0-9a-fA-F]{1,4}$ ]]; then
                return 0
        else
                return 1
        fi
}
#main script
read -p "Enter an IP address: " ip
if is_ipv4 "$ip"; then
        echo "$ip is a valid IPv4 address."
elif is_ipv6 "$ip"; then
        echo "$ip is a valid IPv6 address."
else
        echo "$ip is not a valid IP address."
fi
